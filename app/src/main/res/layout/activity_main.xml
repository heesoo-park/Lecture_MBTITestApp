<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title1_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="MBTI"
        android:textColor="@color/white"
        android:textSize="70sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title2_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성격유형검사"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title1_text" />

    <!-- 시작 버튼으로 사용할 이미지 -->
    <ImageView
        android:id="@+id/start_img"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_start"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toTopOf="@+id/people_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/people_img"
        android:layout_width="280dp"
        android:layout_height="220dp"
        android:scaleType="fitCenter"
        android:src="@drawable/bg_person2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>